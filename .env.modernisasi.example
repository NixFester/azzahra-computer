# =====================================================
# ENVIRONMENT VARIABLES UNTUK MODERNISASI AZZAHRA
# =====================================================
# 
# Copy ke file .env dan sesuaikan dengan sistem Anda
#

# ============== APPLICATION ==============
APP_NAME="Azzahra Computer"
APP_ENV=local
APP_KEY=base64:your_key_here_use_php_artisan_key_generate
APP_DEBUG=true
APP_URL=http://localhost:8000

# ============== DATABASE ==============
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=azzahra_db
DB_USERNAME=root
DB_PASSWORD=

# ============== CACHE ==============
# Recommended: Use Redis untuk production
CACHE_DRIVER=file
# CACHE_DRIVER=redis  # Uncomment untuk production
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============== SESSION ==============
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ============== QUEUE ==============
QUEUE_CONNECTION=sync
# QUEUE_CONNECTION=redis  # Uncomment untuk background jobs

# ============== MAIL ==============
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_username
MAIL_PASSWORD=your_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@azzahra.test
MAIL_FROM_NAME="${APP_NAME}"

# ============== AWS S3 (Optional) ==============
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# ============== STORAGE ==============
FILESYSTEM_DISK=local
# FILESYSTEM_DISK=s3  # Uncomment untuk use AWS S3

# ============== LOGGING ==============
LOG_CHANNEL=stack
LOG_LEVEL=debug
# LOG_LEVEL=notice  # Uncomment untuk production

# ============== FEATURES ==============
# Enable/disable fitur baru
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_NOTIFICATIONS=false
FEATURE_DARK_MODE=false

# ============== PAGINATION ==============
ITEMS_PER_PAGE=15

# ============== TIMEZONE ==============
APP_TIMEZONE=Asia/Jakarta

# ============== PRODUCTION SETTINGS ==============
# Uncomment untuk production:
# APP_DEBUG=false
# LOG_LEVEL=notice
# CACHE_DRIVER=redis
# SESSION_DRIVER=cookie
# QUEUE_CONNECTION=redis
